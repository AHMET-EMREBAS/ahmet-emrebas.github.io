{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@techbir/common": ["libs/common/src/index.ts"],
      "@techbir/common/*": ["libs/common/src/lib/*"],
      "@techbir/core": ["libs/core/src/index.ts"],
      "@techbir/entities": ["libs/entities/src/index.ts"],
      "@techbir/entities-graph": ["libs/entities-graph/src/index.ts"],
      "@techbir/forms": ["libs/forms/src/index.ts"],
      "@techbir/gen": ["libs/gen/src/index.ts"],
      "@techbir/material": ["libs/material/src"],
      "@techbir/material-api": ["libs/material-api/src/index.ts"],
      "@techbir/material/*": ["libs/material/src/lib/*"],
      "@techbir/meta": ["libs/meta/src/index.ts"],
      "@techbir/resources": ["libs/resources/src/index.ts"],
      "@techbir/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
