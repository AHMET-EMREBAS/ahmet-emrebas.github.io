{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "name": {
            "$ref": "../property-names/index.schema.json"
        },
        "type": {
            "type": "string",
            "enum": [
                "ManyToMany",
                "ManyToOne",
                "OneToOne",
                "OneToMany"
            ]
        },
        "target": {
            "$ref": "../model-names/index.schema.json"
        },
        "nullable": {
            "type": "boolean",
            "default": true
        },
        "cascade": {
            "oneOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "array",
                    "items": {
                        "enum": [
                            "insert",
                            "update",
                            "remove",
                            "soft-remove",
                            "recover"
                        ]
                    },
                    "uniqueItems": true
                }
            ]
        },
        "onDelete": {
            "enum": [
                "RESTRICT",
                "CASCADE",
                "SET NULL",
                "DEFAULT",
                "NO ACTION"
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "type",
        "target"
    ]
}